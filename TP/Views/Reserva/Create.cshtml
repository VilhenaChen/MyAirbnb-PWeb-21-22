@model TP.Models.Reserva

@{
    ViewData["Title"] = "Reservar";
}

<h1>Reservar Imóvel</h1>

<div class="row">
    <div class="col-md-5">
        <h4>@ViewBag.Imovel.Nome</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Imovel.Tipo_Imovel.Tipo)
            </dt>
            <dd class="col-sm-10">
                @ViewBag.Imovel.Tipo_Imovel.Tipo
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Imovel.Tipologia)
            </dt>
            <dd class="col-sm-10">
                @ViewBag.Imovel.Tipologia
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Imovel.Pais)
            </dt>
            <dd class="col-sm-10">
                @ViewBag.Imovel.Pais
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Imovel.Distrito)
            </dt>
            <dd class="col-sm-10">
                @ViewBag.Imovel.Distrito
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Imovel.Localidade)
            </dt>
            <dd class="col-sm-10">
                @ViewBag.Imovel.Localidade
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Imovel.Codigo_Postal)
            </dt>
            <dd class="col-sm-10">
                @ViewBag.Imovel.Codigo_Postal
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Imovel.Morada)
            </dt>
            <dd class="col-sm-10">
                @ViewBag.Imovel.Morada
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Imovel.Preco)
            </dt>
            <dd class="col-sm-10">
                @ViewBag.Imovel.Preco
            </dd>
        </dl>
    </div>
    <div class="col-md-5">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Check_In" class="control-label"></label>
                <input asp-for="Check_In" class="form-control" />
                <span asp-validation-for="Check_In" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Check_Out" class="control-label"></label>
                <input asp-for="Check_Out" class="form-control" />
                <span asp-validation-for="Check_Out" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

    <div>
        <a asp-controller="Imovel" asp-action="Index">Voltar Atrás</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
