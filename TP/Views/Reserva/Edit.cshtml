@model TP.Models.Reserva

@{
    ViewData["Title"] = "Editar Reserva";
}

<h1>Editar Reserva</h1>
<hr />
<div class="row">
    <div class="col-md-5">
        <dl class="row">
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Imovel)
            </dt>
            <dd class="col-sm-5">
                @ViewBag.Imovel.Nome
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Cliente)
            </dt>
            <dd class="col-sm-5">
                @ViewBag.Cliente.Utilizador.Nome
            </dd>
        </dl>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Check_In" class="control-label"></label>
                <input asp-for="Check_In" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Check_Out" class="control-label"></label>
                <input asp-for="Check_Out" class="form-control" disabled />
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Confirmacao" /> @Html.DisplayNameFor(model => model.Confirmacao)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Comentarios_Check_Out" class="control-label"></label>
                <input asp-for="Comentarios_Check_Out" class="form-control" />
                <span asp-validation-for="Comentarios_Check_Out" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="ImovelId" class="form-control" value=@ViewBag.Imovel.Id type="hidden" />
            </div>
            <div class="form-group">
                <input asp-for="FuncionarioId" class="form-control" value=@ViewBag.Funcionario.Id type="hidden" />
            </div>
            <div class="form-group">
                <input asp-for="ClienteId" class="form-control" value=@ViewBag.Cliente.Id type="hidden" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

    <div>
        <a asp-action="Index">Voltar Atrás</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
