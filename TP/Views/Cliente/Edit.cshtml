@model TP.Models.Cliente

@{
    ViewData["Title"] = "Editar Clientes";
}

<h1>Editar Cliente:</h1>
<h4>@Model.Utilizador.UserName</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Utilizador.UserName" class="control-label"></label>
                <input asp-for="Utilizador.UserName" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Utilizador.Nome" class="control-label"></label>
                <input asp-for="Utilizador.Nome" class="form-control" />
                <span asp-validation-for="Utilizador.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Utilizador.Email" class="control-label"></label>
                <input asp-for="Utilizador.Email" class="form-control" />
                <span asp-validation-for="Utilizador.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Utilizador.PhoneNumber" class="control-label"></label>
                <input asp-for="Utilizador.PhoneNumber" class="form-control" />
                <span asp-validation-for="Utilizador.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar Atrás</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
