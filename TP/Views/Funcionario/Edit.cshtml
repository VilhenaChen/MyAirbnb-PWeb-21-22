@model TP.Models.Funcionario

@{
    ViewData["Title"] = "Editar Funcionário";
}

<h1>Editar Funcionário:</h1>

<h4>@Model.Utilizador.UserName </h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="UtilizadorId" class="control-label"></label>
                <select asp-for="UtilizadorId" class="form-control" asp-items="ViewBag.UtilizadorId"></select>
                <span asp-validation-for="UtilizadorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GestorId" class="control-label"></label>
                <select asp-for="GestorId" class="form-control" asp-items="ViewBag.GestorId"></select>
                <span asp-validation-for="GestorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
